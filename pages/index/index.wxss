.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}

.header {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 30px;
}

.instructions {
  font-size: 18px;
  margin-bottom: 40px;
  color: #666;
}

.coins-container {
  display: flex;
  justify-content: space-around;
  width: 100%;
  margin: 20px 0;
}

.coin {
  width: 80px;
  height: 80px;
}

.coin image {
  width: 100%;
  height: 100%;
}

.options {
  display: flex;
  flex-direction: column;
  width: 80%;
  margin-top: 20px;
}

.options button {
  margin: 10px 0;
}

.progress {
  width: 80%;
  margin: 20px 0;
  text-align: center;
}

.history {
  margin-top: 30px;
  width: 80%;
  border-top: 1px solid #eee;
  padding-top: 15px;
}

.history text {
  display: block;
  margin: 5px 0;
}
