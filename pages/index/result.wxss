.container {
  padding: 20px;
}

.header {
  font-size: 24px;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30px;
}

.gua-image {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30px;
}

.yao {
  margin: 8px 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.yao-line {
  height: 6px;
  margin-bottom: 5px;
}

.yang {
  background-color: #000;
  width: 100px;
}

.yin {
  background-color: #000;
  width: 50px;
  margin-left: 25px;
  margin-right: 25px;
}

.yao-desc {
  font-size: 12px;
  color: #666;
}

.gua-desc, .gua-detail {
  margin-bottom: 20px;
}

.title {
  font-weight: bold;
  display: block;
  margin-bottom: 5px;
}

.back-btn {
  margin-top: 40px;
  background-color: #1aad19;
  color: white;
}
